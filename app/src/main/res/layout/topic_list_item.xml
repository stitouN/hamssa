<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:paddingStart="4dp"
    android:paddingLeft="4dp"
    android:paddingEnd="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:contentPadding="8dp"
        card_view:cardUseCompatPadding="true"
        android:background="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="This is a placeholder for a text"/>

                    <ImageButton
                        android:id="@+id/link"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:visibility="gone"
                        android:src="@drawable/ic_link"/>

                </LinearLayout>


                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                    <LinearLayout
                        android:id="@+id/image_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ic_account"
                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/userName_wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:singleLine="true"
                                android:textSize="16sp"
                                />
                            <ImageButton
                                android:id="@+id/expand"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:layout_marginLeft="8dp"
                                android:background="?android:attr/selectableItemBackground"
                                android:src="@drawable/ic_expand"/>
                        </LinearLayout>
                    </RelativeLayout>
              </LinearLayout>

            </LinearLayout>
           <RelativeLayout
               android:id="@+id/content_image_wrapper"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/content_image"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:adjustViewBounds="false"
                   android:scaleType="centerCrop"
                   android:background="@drawable/image1"
                   />
               <TextView
                   android:id="@+id/description"
                   android:maxLines="8"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:inputType="textMultiLine"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textColor="@color/White"
                   android:textIsSelectable="false"
                   android:shadowColor="@color/Black"
                   android:shadowDx="1"
                   android:shadowDy="1"
                   android:shadowRadius="3"
                   android:text="This is a placeholder for a text"

                   />
               <android.support.v7.widget.CardView
                   android:id="@+id/player_wrapper"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   card_view:contentPadding="4dp"
                   card_view:cardUseCompatPadding="true"
                   android:layout_centerInParent="true"
                   app:cardElevation="4dp"
                   android:layoutDirection="ltr"
                   android:visibility="gone"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:gravity="center_vertical"
                       >
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ic_headset_black_24dp"
                           />
                       <ImageButton
                           android:id="@+id/btn_play_pause"
                           android:layout_marginStart="8dp"
                           android:layout_marginLeft="8dp"
                           android:layout_marginEnd="8dp"
                           android:layout_marginRight="8dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ic_play_arrow_black_24dp"
                           />
                       <SeekBar
                           android:id="@+id/seek_bar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginEnd="4dp"
                           android:layout_marginRight="4dp"
                           />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/time_create_record"
                       android:layout_gravity="bottom|end"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="23:00"
                       android:layout_marginBottom="2dp"
                       android:layout_marginEnd="4dp"
                       android:layout_marginRight="4dp"
                       />
                   <Chronometer
                       android:id="@+id/chronometer_player"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="00:35"
                       android:layout_gravity="bottom"
                       android:layout_marginStart="124dp"
                       android:layout_marginLeft="124dp"
                       android:layout_marginBottom="2dp"
                       android:textColor="@color/Gray"
                       />

               </android.support.v7.widget.CardView>


           </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="comments"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/numMessages"
                        android:layout_width="32dp"
                        android:layout_height="28dp"
                        android:background="@drawable/ic_mode_comment_black_24dp"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:textColor="@color/Pink"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="10+"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>