<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:paddingRight="8dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"
            />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/layout_image"
        android:layout_below="@id/appBarLy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- layout for image with text -->
        <RelativeLayout
            android:id="@+id/layout_images_text"
            android:layout_above="@id/Bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    >

                    <RelativeLayout
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:id="@+id/image"
                            android:background="@drawable/image1"
                            />
                        <EditText
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:hint="@string/what_is_on_your_mind"
                            android:textColorHint="@color/WhiteSmoke"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:maxLength="120"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="24sp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:shadowColor="@color/Black"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/White"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

            //Start Images scrolling
            <RelativeLayout
                android:id="@+id/rl_hsc"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layoutDirection="ltr"
                android:layout_marginTop="48dp"
                android:layout_alignParentBottom="true"
                >
                <HorizontalScrollView
                    android:id="@+id/hsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:paddingRight="18dp"
                    android:paddingLeft="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="24dp"
                        android:id="@+id/parentImagesStatic"
                        >
                        <ImageButton
                            android:id="@+id/back"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"/>
                        <ImageButton
                            android:id="@+id/back1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/border_back_selected"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image1"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image1.jpg"

                            />
                        <ImageButton
                            android:id="@+id/back2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image2"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image2.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image3"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image3.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image4"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image4.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image5"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image5.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back6"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image6"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image6.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back7"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image7"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image7.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back8"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image8"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image8.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back9"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image9"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image9.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back10"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image10"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image10.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back11"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image11"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image11.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back12"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image12"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image12.jpg"
                            />
                        <ImageButton
                            android:id="@+id/back13"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/circel_mic"
                            android:src="@drawable/image13"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="8dp"
                            android:contentDescription="image13.jpg"
                            />

                    </LinearLayout>
                </HorizontalScrollView>
                <ImageButton
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/btn_show_hide_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/border2"
                    android:src="@drawable/arrow_left_black_24dp"
                    android:layout_centerVertical="true"
                    />
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_more_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:background="@drawable/border2"
                    android:src="@drawable/ic_apps_black_24dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            //end scrolling Images
        </RelativeLayout>
        <!-- layout for recording voice -->
        <RelativeLayout
            android:layout_above="@id/Bottom"
            android:id="@+id/layout_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:visibility="gone"
            >


            <TextView
                android:id="@+id/tv_reocrd_voice"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send anonymous voice "
                android:textAlignment="center"
                android:textSize="20dp"
                android:padding="24dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/accent"
                android:background="@color/White"
                android:shadowColor="@color/Black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                />
            <EditText
                android:layout_below="@id/tv_reocrd_voice"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/topic_description_hint"
                android:textSize="16sp"
                android:layout_margin="16dp"
                />

           <android.support.v7.widget.CardView
               android:id="@+id/card_player"
               android:visibility="gone"
               app:cardUseCompatPadding="true"
               android:layout_margin="16dp"
               android:layout_below="@id/title"
               app:cardElevation="2dp"
               android:layout_centerInParent="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="8dp"
                      >
                      <RadioGroup
                          android:layout_width="match_parent"
                          android:layout_height="54dp"
                          android:layout_margin="8dp"
                          >
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              >
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:checked="true"
                                  android:layout_margin="16dp"
                                  />
                              <FrameLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:background="@drawable/border_record"
                                  >
                                  <ImageButton
                                      android:id="@+id/btn_play_pause1"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:background="@drawable/ic_play_button"
                                      android:layout_gravity="start|center_vertical"
                                      android:layout_margin="8dp"
                                      android:onClick="ButtonsClick"
                                      />

                                  <LinearLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:background="@drawable/border2"
                                      android:padding="8dp"
                                      android:layout_gravity="end|center_vertical"
                                      android:gravity="center_vertical"
                                      >
                                      <Chronometer
                                          android:id="@+id/chronometer1_record"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="00:00"
                                          android:textColor="@color/White"
                                          android:textStyle="bold"
                                          android:layout_marginEnd="16dp"
                                          android:layout_marginRight="16dp"
                                          android:layout_gravity="center_vertical"
                                          />
                                      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_height="32dp"
                                          android:background="@drawable/ic_record_waves"
                                          />
                                  </LinearLayout>
                              </FrameLayout>
                          </LinearLayout>

                      </RadioGroup>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="2dp"
                          android:background="@color/WhiteSmoke"
                          android:layout_marginTop="4dp"
                          android:layout_marginBottom="4dp"
                          />

                      <RadioGroup
                          android:layout_width="match_parent"
                          android:layout_height="54dp"
                          android:layout_margin="8dp"
                          >
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              >
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_margin="16dp"
                                  />
                              <FrameLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:background="@drawable/border_record"
                                  >
                                  <ImageButton
                                      android:id="@+id/btn_play_pause2"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:background="@drawable/ic_play_button"
                                      android:layout_gravity="start|center_vertical"
                                      android:layout_margin="8dp"
                                      android:onClick="ButtonsClick"
                                      />

                                  <LinearLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:background="@drawable/border2"
                                      android:padding="8dp"
                                      android:layout_gravity="end|center_vertical"
                                      android:gravity="center_vertical"
                                      >
                                      <Chronometer
                                          android:id="@+id/chronometer2_record"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="00:00"
                                          android:textColor="@color/White"
                                          android:textStyle="bold"
                                          android:layout_marginEnd="16dp"
                                          android:layout_marginRight="16dp"
                                          android:layout_gravity="center_vertical"
                                          />
                                      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_height="32dp"
                                          android:background="@drawable/ic_record_waves"
                                          />
                                  </LinearLayout>
                              </FrameLayout>
                          </LinearLayout>

                      </RadioGroup>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="2dp"
                          android:background="@color/WhiteSmoke"
                          android:layout_marginTop="4dp"
                          android:layout_marginBottom="4dp"
                          />

                      <RadioGroup
                          android:layout_width="match_parent"
                          android:layout_height="54dp"
                          android:layout_margin="8dp"
                          >
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:gravity="center_vertical"
                              >
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_margin="16dp"
                                  />
                              <FrameLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:background="@drawable/border_record"
                                  >
                                  <ImageButton
                                      android:id="@+id/btn_play_pause3"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:background="@drawable/ic_play_button"
                                      android:layout_gravity="start|center_vertical"
                                      android:layout_margin="8dp"
                                      android:onClick="ButtonsClick"
                                      />

                                  <LinearLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="match_parent"
                                      android:background="@drawable/border2"
                                      android:padding="8dp"
                                      android:layout_gravity="end|center_vertical"
                                      android:gravity="center_vertical"
                                      >
                                      <Chronometer
                                          android:id="@+id/chronometer3_record"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="00:00"
                                          android:textColor="@color/White"
                                          android:textStyle="bold"
                                          android:layout_marginEnd="16dp"
                                          android:layout_marginRight="16dp"
                                          android:layout_gravity="center_vertical"
                                          />
                                      <ImageView
                                          android:layout_width="wrap_content"
                                          android:layout_height="32dp"
                                          android:background="@drawable/ic_record_waves"
                                          />
                                  </LinearLayout>
                              </FrameLayout>
                          </LinearLayout>

                      </RadioGroup>

                  </LinearLayout>

           </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_microphone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:id="@+id/btn_start_send_record"
                android:onClick="ButtonsClick"

                />
            <LinearLayout
                android:id="@+id/layout_record_voice"
                android:layout_toStartOf="@+id/btn_start_send_record"
                android:layout_toLeftOf="@id/btn_start_send_record"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_record"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/border2"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    >
                    <Chronometer
                        android:id="@+id/chronometer_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/ic_record_waves"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end"
                    >
                    <ImageButton
                        android:id="@+id/btn_cancel_record"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/ic_cancel_recording"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:onClick="ButtonsClick"

                        />
                    <ImageButton
                        android:onClick="ButtonsClick"
                        android:id="@+id/btn_save_record"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/ic_checked"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        />
                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>
        <!-- footer-->
        <LinearLayout
            android:id="@+id/Bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/WhiteSmoke"
            android:elevation="2dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to your post "
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:padding="8dp"
                >
                <ImageView
                    android:id="@+id/btn_change_text_color"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_format_color_text_black_24dp"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/DarkGray"
                    />
                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_photo_camera_black_24dp"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/DarkGray"
                    />
                <ImageView

                    android:id="@+id/gallery"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_image_black_24dp"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/DarkGray"
                    />
                <ImageView
                    android:id="@+id/btn_mic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/mic_animation"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>